<% include ./partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">New Movie</div>
    <form class="ui form" action="/movies" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="movie[title]" placeholder="title">
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="movie[image]" placeholder="image">
        </div>
        <div class="field">
            <label>Movie Content</label>
            <textarea name="movie[body]"></textarea>
        </div>
        <input class="ui violet big basic button" type="submit">
    </form>
</div>

