<% include ./partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header"><%= movie.title %></div>
    <div class="ui top attached">
        <div class="item">
            <img class="ui centered rounded image" src="<%= movie.image%>">
            <div class="content">
                <span><%= movie.created.toDateString() %></span>
            </div>
            <div class="description">
                <p><%- movie.body %></p>
            </div>
            <a class="ui violet basic button" href="/movies/<%= movie._id %>/edit">Edit</a>
            <form id="delete" action="/movie/<%= movie._id %>?_method=DELETE" method="POST">
                <button class="ui red basic button">Delete</button>
            </form>
        </div>
    </div>
</div>

<% include ./partials/footer %>